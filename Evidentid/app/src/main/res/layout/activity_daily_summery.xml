<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.crazycrystalstudio.evidentid.DailySummaryActivity">

    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAILY SUMMARY"
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/textColorWhite"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/visi"
        />

    <TextView
        android:id="@+id/mintempi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:textSize="@dimen/text_small"
        android:textColor="@color/textColorWhite"
        android:layout_below="@+id/summary"
        />

    <TextView
        android:id="@+id/meanwindspdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:textSize="@dimen/text_small"
        android:textColor="@color/textColorWhite"
        android:layout_below="@+id/mintempi"
        />

    <TextView
        android:id="@+id/meanvisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:textSize="@dimen/text_small"
        android:textColor="@color/textColorWhite"
        android:layout_below="@+id/meanwindspdi"
        />

</LinearLayout>
