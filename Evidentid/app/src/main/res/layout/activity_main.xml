<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.crazycrystalstudio.evidentid.MainActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/layout_top_margin"
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:layout_marginRight="@dimen/layout_right_margin">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tempi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:textColor="@color/textColorWhite" />

        <TextView
            android:id="@+id/conds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_medium"
            android:textColor="@color/textColorWhite"
            />
        <TextView
            android:id="@+id/pretty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_small"
            android:textColor="@color/textColorWhite"
            />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:layout_marginTop="@dimen/layout_top_margin"
        android:textColor="@color/textColorWhite"
        android:layout_below="@+id/layout" />

    <TextView
        android:id="@+id/dewpti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="@dimen/layout_top_margin"
        android:text=""
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/hum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:textSize="@dimen/text_small"
        android:textColor="@color/textColorWhite"
        android:layout_below="@+id/dewpti" />

    <TextView
        android:id="@+id/wspdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:textSize="@dimen/text_small"
        android:textColor="@color/textColorWhite"
        android:layout_below="@+id/hum"
        />

    <TextView
        android:id="@+id/visi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:textSize="@dimen/text_small"
        android:textColor="@color/textColorWhite"
        android:layout_below="@+id/wspdi"
        />

</RelativeLayout>
